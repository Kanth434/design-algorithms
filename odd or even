def check_odd_even_char(input_string, index):
    if index < len(input_string):
        if index % 2 == 0:
            print(f"Character at index {index} '{input_string[index]}' is even.")
        else:
            print(f"Character at index {index} '{input_string[index]}' is odd.")
    else:
        print("Index out of range.")

# Example Usage
input_str = "Hello, World!"
check_odd_even_char(input_str, 4)
